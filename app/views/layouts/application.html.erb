<!DOCTYPE html>
<html>
<head>
  <title>GoalsApp</title>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:errors] %>
  <%= flash[:errors].to_json %>
<% end %>

<% if flash[:notice] %>
  <%= flash[:notice].to_json %>
<% end %>

<% if logged_in? %>
  Welcome, <%= current_user.username%>!
  <%= button_to "Sign Out", session_url, method: :delete %>
<% else %>
  <%= link_to "Sign In", new_session_url %>
  <%= link_to "Sign Up", new_user_url %>
<% end %>


<%= yield %>

</body>
</html>
